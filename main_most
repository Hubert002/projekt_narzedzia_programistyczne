#include <iostream>
#include <cmath>

using namespace std;

int main()
{

    cout << "WITAJ W KALKULATORZE\n\n"
         << "WYBIERZ DZIALANIE JAKIE CIE INTERESUJE\n\n"

         << "1. DODAWANIE\n"
         << "2. ODEJMOWANIE\n"
         << "3. MNOZENIE\n"
         << "4. DZIELENIE\n"
         
         << "5. 2 POTEGA (KWADRAT LICZBY)\n"
         << "6. PIERWIASTEK 2 STOPNIA Z LICZBY\n"
         << "7. 3 POTEGA (SZESCIAN LICZBY)\n"
         << "8. PIERWIASTEK 3 STOPNIA Z LICZBY\n"
         
         << "9. SINUS\n"
         << "10. COSINUS\n"
         << "11. TANGENS\n"
         << "12. COTANGENS\n"

         
                 
         << endl
         << "PODAJ ODPOWIEDNIA LICZBE DLA DZIALANIA: " << endl;

         int wybieranie;
         cin >> wybieranie;
         
         switch (wybieranie)
         {
         
         
         // DODAWANIE
             case '1':
             {
                 int a,b, suma;
                 cout << endl;
                 cout << "WYBRALES DODAWANIE\n";
                 cout << "PODAJ 1 LICZBE: ";
                 cin >> a;
                 cout << "PODAJ 2 LICZBE: ";
                 cin >> b;
                 suma = a + b;
                 cout << "SUMA TO: " << suma;
             }
             break;

             // USUWANIE
             case '2':
             {
                 int a,b, roznica;
                 cout << endl;
                     cout << "WYBRALES ODEJMOWANIE\n";
                 cout << "PODAJ 1 LICZBE: ";
                 cin >> a;
                 cout << "PODAJ 2 LICZBE: ";
                 cin >> b;
                 roznica = a - b;
                 cout << "ROZNICA TO: " << roznica;
             }
             break;

             // MNOZENIE
             case '3':
             {
                 int a,b, iloczyn;
                 cout << endl;
                 cout << "WYBRALES MNOZENIE\n";
                 cout << "PODAJ 1 LICZBE: ";
                 cin >> a;
                 cout << "PODAJ 2 LICZBE: ";
                 cin >> b;
                 iloczyn = a * b;
                 cout << "ILOCZYN TO: " << iloczyn;
             }
             break;

             // DZIELNIE
             case '4':
             {
                 int a,b, iloraz;
                 cout << endl;
                 cout << "WYBRALES DZIELNIE\n";
                 cout << "PODAJ 1 LICZBE: ";
                 cin >> a;
                 cout << "PODAJ 2 LICZBE: ";
                 cin >> b;
                 iloraz = a * b;
                 cout << "ILORAZ TO: " << iloraz;
             }
             break;

             // 2 POTEGA (KWADRAT LICZBY)
             case '5':
             {
                 int x, kwadrat;
                 cout << endl;
                 cout << "WYBRALES 2 POTEGA (KWADRAT LICZBY)\n";
                 cout << "PODAJ LICZBE: ";
                 cin >> x;
                 kwadrat = x * x;
                 cout << "2 POTEGA (KWADRAT) TWOJEJ LICZBY TO: " << kwadrat;
             }
             break;

             // PIERWIASTEK 2 STOPNIA Z LICZBY
             case '6':
             {
                 double x, sqrt2;
                 cout << endl;
                 cout << "WYBRALES PIERWIASTEK 2 STOPNIA Z LICZBY\n";
                 cout << "PODAJ LICZBE: ";
                 cin >> x;
                 sqrt2 = pow(x, 0.5);
                 cout << "PIERWIASTEK 2 STOPNIA Z TWOJEJ LICZBY TO: " << sqrt2;
             }
             break;


             // 3 POTEGA (SZESCIAN LICZBY)
             case '7':
             {
                 int x, szescian;
                 cout << endl;
                 cout << "WYBRALES 3 POTEGA (SZESCIAN LICZBY)\n";
                 cout << "PODAJ LICZBE: ";
                 cin >> x;
                 szescian = x * x * x;
                 cout << "3 POTEGA (SZESCIAN) TWOJEJ LICZBY TO: " << szescian;
             }
             break;

             // PIERWIASTEK 3 STOPNIA Z LICZBY
             case '8':
             {
                 double x, sqrt3;
                 cout << endl;
                 cout << "WYBRALES PIERWIASTEK 3 STOPNIA Z LICZBY\n";
                 cout << "PODAJ LICZBE: ";
                 cin >> x;
                 sqrt3 = pow(x, 0.33333333333333333333333333);
                 cout << "PIERWIASTEK 3 STOPNIA Z TWOJEJ LICZBY TO: " << sqrt3;
             }
             break;
             
            // SINUS
             case '9':
             {
                 double x, sinus, rad;
                 cout << endl;
                 cout << "WYBRALES SINUS\n";
                 cout << "PODAJ KAT W STOPNIACH: ";
                 cin >> x;
                 rad = (x * 3.14) / 180;
                 sinus = sin(rad);
                 cout << "SINUS Z TWOJEJ LICZBY TO: " << sinus;
             }
             break;

             // COSINUS
             case '10':
             {
                 double x, cosinus, rad;
                 cout << endl;
                 cout << "WYBRALES COSINUS\n";
                 cout << "PODAJ KAT W STOPNIACH: ";
                 cin >> x;
                 rad = (x * 3.14) / 180;
                 cosinus = cos(rad);
                 cout << "COSINUS Z TWOJEJ LICZBY TO: " << cosinus;
             }
             break;

             // TANGENS
             case '11':
             {
                 double x, tangens, rad;
                 cout << endl;
                 cout << "WYBRALES TANGENS\n";
                 cout << "PODAJ KAT W STOPNIACH: ";
                 cin >> x;
                 rad = (x * 3.14) / 180;
                 tangens = tan(rad);
                 cout << "TANGENS Z TWOJEJ LICZBY TO: " << tangens;
             }
             break;

             // COTANGENS
             case '12':
             {
                 double x, cotangens, rad;
                 cout << endl;
                 cout << "WYBRALES COTANGENS\n";
                 cout << "PODAJ KAT W STOPNIACH: ";
                 cin >> x;
                 rad = (x * 3.14) / 180;
                 cotangens = 1/tan(rad);
                 cout << "COTANGENS Z TWOJEJ LICZBY TO: " << cotangens;
             }
             break;
        }

    return 0;
}
